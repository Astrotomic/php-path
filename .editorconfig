root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
max_line_length = off

[{*.yml,*.yaml,*.xml}]
indent_size = 2

[phpunit.xml]
indent_size = unset

[tests/**]
max_line_length = 140
